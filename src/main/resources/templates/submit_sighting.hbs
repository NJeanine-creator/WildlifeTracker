{{#partial "content"}}
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="detail">Sightings List</h2>
                {{#if sightings}}
                    {{#each sightings}}
                        <div class="animals text-white">
                            <div class="">
                                    <h4>Ranger Name:</h4>
                                    <p class="detail"> {{rangerName}}</p>
                                    <h4>Location:</h4>
                                    <p class="detail">{{location}}</p>
                            </div>
                        </div>
                        <hr>
                    {{/each}}
                {{else}}
                    <h3 class="text-info">No Sightings available in the database</h3>
                {{/if}}
            </div>
            <div class="col-md-6">
                <div class="card">
                    <form action="/new/sight" class="p-5" method="post">
                        <h2>Submit Sighting</h2>
                        <div class="row pt-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Animal Name</label>
                                    <select name="name" id="name" class="form-control text-info">
                                        {{#each animals}}
                                            <option value="{{id}}" class="form-control text-info">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="power">Location</label>
                                    <input type="text" placeholder="Location" name="location" required class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ranger">Ranger Name</label>
                                    <input type="text" placeholder="Ranger Name" name="ranger" required class="form-control">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-success float-right" >SUBMIT SIGHTING</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}